class UiButtonEvent : ZilchEvent
{
  
}

class UiButton : ZilchComponent
{
  [Dependency] var UiWidget : UiWidget;
  
  sends UiButtonClicked : UiButtonEvent;
  
  function Initialize(init : CogInitializer)
  {
    Zero.Connect(this.Owner, Events.LeftMouseDown, this.OnLeftMouseDown);
  }

  function OnLeftMouseDown(event : ViewportMouseEvent)
  {
    var eventToSend = UiButtonEvent();
    this.Owner.DispatchEvent(Events.UiButtonClicked, eventToSend);
  }
}
